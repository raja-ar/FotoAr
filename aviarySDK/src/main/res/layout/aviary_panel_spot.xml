<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/aviaryBottomBarOptionPanelContainerStyleNoMargin"
    android:orientation="vertical" >

    <com.aviary.android.feather.widget.AviaryGallery
        android:id="@+id/aviary_gallery"
        style="?attr/aviaryGalleryStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/aviary_bottom_line"
        android:layout_marginTop="@dimen/aviary_gallery_margin_top"
        android:clipChildren="true"
        android:clipToPadding="true" />

    <com.aviary.android.feather.widget.AviaryGalleryTopIndicatorView style="?attr/aviaryGalleryTopIndicatorStyle" />

    <LinearLayout
        android:id="@+id/aviary_bottom_line"
        style="?attr/aviaryOptionPanelBottomLineStyle"
        android:layout_alignParentBottom="true">
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/aviary_disable_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/aviaryPanelDisabledStatusBackground"
        android:visibility="invisible" />    

</RelativeLayout>